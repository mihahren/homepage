mixin header(button)
	nav(class='navbar navbar-default navbar-static-top' role='navigation')
		.container
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/')= menu.brand
			#navbar-collapse(class='collapse navbar-collapse')
				ul(class='nav navbar-nav')
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown')= menu.projects.title
							span.caret
						ul.dropdown-menu(role='menu')
							each value in menu.projects.projects
								li: a(href=value.url, target='_blank')= value.name
				ul(class='nav navbar-nav navbar-right')
					li(class=(button === 'about' ? 'active' : '')): a(href='/about')= menu.about
					li(class=(button === 'contact' ? 'active' : '')): a(href='/contact')= menu.contact